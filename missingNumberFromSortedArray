export default function App() {
  function findMissingNumber(arr) {
    const n = arr.length;

    // Check if the first element is not 1
    if (arr[0] !== 1) {
      return 1;
    }

    // Check for gaps in the sequence
    for (let i = 1; i < n; i++) {
      if (arr[i] - arr[i - 1] !== 1) {
        return arr[i] - 1;
      }
    }

    // If no missing number is found, return the next number in the sequence
    return arr[n - 1] + 1;
  }

  // Example usage
  const array = [1, 2, 3, 5, 6, 7];
  const missingNumber = findMissingNumber(array);
  console.log(missingNumber); // Output: 4

  return (
    <div className="App">
      <h1>Find the missing number from sorted array with O(n) complexity</h1>
    </div>
  );
}
