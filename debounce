import "./styles.css";

export default function App() {
  const debounce = (cb, d) => {
    let timer;
    return function (arrgs) {
      if (timer) clearTimeout(timer);
      timer = setTimeout(() => {
        cb(arrgs);
      }, d);
    };
  };
  const handleChange = debounce((e) => {
    console.log(e.target.value);
  }, 1000);

  return (
    <div className="App">
      <h1>debounce</h1>
    </div>
  );
}
